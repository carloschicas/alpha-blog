<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10 justify-content-md-center">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: 'shadow p-3 mb-5 bg-info rounded', local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :username, class: 'form-label text-light' %>
          <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: 'form-label text-light' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'form-label text-light' %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>

        <div class="mb-3">
          <%= f.submit(@user.new_record? ? "Sing up" : "Update account", class: 'btn btn-outline-light btn-lg') %>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= link_to ' [ Cancel ] ', articles_path, class: 'text-info' %>
    </div>
  </div>
</div>